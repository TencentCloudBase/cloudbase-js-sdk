{
  "compileOnSave": true,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist/cjs",
    "rootDir": "src",
    "pretty": true,
    "removeComments": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "skipLibCheck": true,
    "strictBindCallApply": true,
    "target": "es5",
    "moduleResolution": "node",
    "lib": ["es2015", "dom"]
  },
  "include": [
    "src/**/*.ts",
    "package.json"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
