{
  "name": "cloudbase-js-sdk",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "install-deps": "lerna bootstrap",
    "build": "BUILD_SRC='wrapper' lerna run --scope @cloudbase/* build",
    "build:cdn": "BUILD_SRC='wrapper' lerna run --scope @cloudbase/* build:cdn",
    "build:e2e": "BUILD_SRC='wrapper' lerna run --scope @cloudbase/* build:e2e",
    "lint": "lerna run --scope @cloudbase/* lint",
    "test": "jest --verbose false -i",
    "test:e2e": "npm run build:e2e&&jest --config=\"./jest.e2e.config.js\" --verbose false -i \"e2e\"",
    "test:web": "webpack-dev-server --devtool eval-source-map --progress --colors --hot --inline --content-base ./test/web --host jimmytest-088bef.tcb.qcloud.la --port 80 --disableHostCheck true --mode development --config webpack.test-web.js",
    "publish": "npm run lint && npm run build && lerna publish",
    "publish:beta": "lerna publish --dist-tag beta"
  },
  "publishConfig": {
    "access": "public"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-typescript": "^7.9.0",
    "@cloudbase/database": "^0.9.15",
    "axios": "^0.19.2",
    "babel-loader": "^8.1.0",
    "core-js": "^3.6.5",
    "express": "^4.17.1",
    "jest": "^26.0.1",
    "jest-puppeteer": "^4.4.0",
    "lerna": "^3.20.2",
    "power-assert": "^1.6.1",
    "puppeteer": "1.20.0",
    "rimraf": "^3.0.2",
    "serve-static": "^1.14.1",
    "ts-jest": "^26.1.4",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.0"
  }
}
